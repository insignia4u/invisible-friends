<%= form_for game do |f| %>
  <%= error_messages_for(game) %>

  <div class='field'>
    <%= f.label :name %>
    <%= f.text_field :name%>
  </div>

  <div class='field'>
    <%= f.label :scheduled_on %>
    <%= f.text_field :scheduled_on, placeholder: "Must be a future date" %>
  </div>

  <div class='field'>
    <%= f.label :description %>
    <%= f.text_area :description, placeholder: "Gift types, price ranges..." %>
  </div>

  <div class='action'>
    <%= f.submit "Create Game" %>
  </div>

<% end %>
