<h1>New friend</h1>
<% if defined?(errors) %>
  <ul>
  <% errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
  </ul>
<% end %>
<%= form_for friend, url: game_friends_path do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :email %>
  <%= f.text_field :email %>
  <%= f.submit 'Add to Game' %>
<% end %>
